{
  "source": {
    "include": ["src"],
    "includePattern": "\\.(jsx|js)$",
    "excludePattern": "(node_modules|docs)"
  },
  "tags": {
    "allowUnknownTags": true
  },
  "plugins": [
    "plugins/markdown",
    "better-docs/component",
    "better-docs/category"
  ],
  "templates": {
    "cleverLinks": true,
    "monospaceLinks": true,
    "better-docs": {
      "name": "ðŸ¦… Aquila Store",
      "navigation": [
          {
              "label": "GitHub",
              "href": "https://github.com/BraianVaylet/coderhouse-react11360-bdv"
          }
      ]
    },
    "search": true,
    "default": {
      "staticFiles": {
        "include": [
            "./docs-src"
        ]
      }
    }
  },
  "opts": {
    "encoding": "utf8",
    "destination": "./docs",
    "recurse": true,
    "verbose": true,
    "readme": "./readme.md",
    "template": "node_modules/better-docs",
    "tutorials": "./docs-tutorials"
  }
}
